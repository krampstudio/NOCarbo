<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
>
	<servlet>
		<servlet-name>FoodServlet</servlet-name>
		<servlet-class>com.krampstudio.nopas.web.FoodServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FoodServlet</servlet-name>
		<url-pattern>/nopas/food</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>NoPas</servlet-name>
		<servlet-class>com.krampstudio.nopas.web.NoPasServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoPas</servlet-name>
		<url-pattern>/nopas</url-pattern>
	</servlet-mapping>
	
	 <welcome-file-list>
		<welcome-file>nopas</welcome-file>
	</welcome-file-list>
	
</web-app>